<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".PaletteActivity"
        android:padding="20dp">

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#6200EE"
                                               android:background="@color/c_6200EE"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintEnd_toStartOf="@id/button_3700B3"
                                               android:textColor="#ffffff"
                                               android:id="@+id/button_6200EE"/>


    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#3700B3"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintStart_toEndOf="@id/button_6200EE"
                                               app:layout_constraintEnd_toStartOf="@+id/button_03DAC6"
                                               android:background="@color/c_3700B3"
                                               android:textColor="#ffffff"
                                               android:id="@+id/button_3700B3"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#03DAC6"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               app:layout_constraintStart_toEndOf="@id/button_3700B3"
                                               android:background="@color/c_03DAC6"
                                               android:id="@+id/button_03DAC6"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#018786"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:background="@color/c_018786"
                                               app:layout_constraintEnd_toStartOf="@id/button_FFFFFF"
                                               android:id="@+id/button_018786"/>


    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#FFFFFF"
                                               app:layout_constraintStart_toEndOf="@+id/button_018786"
                                               android:background="@color/c_FFFFFF"
                                               app:layout_constraintEnd_toStartOf="@id/button_000000"
                                               android:id="@+id/button_FFFFFF"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#000000"
                                               app:layout_constraintStart_toEndOf="@id/button_FFFFFF"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:background="@color/c_000000"
                                               android:textColor="#ffffff"
                                               android:id="@+id/button_000000"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_018786"
                                               android:layout_marginTop="10dp"
                                               android:text="#B00020"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:background="@color/c_B00020"
                                               app:layout_constraintEnd_toStartOf="@id/button_FFFFFF"
                                               android:id="@+id/button_B00020"/>


    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:id="@+id/divider"
          android:background="@color/black"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView android:layout_width="100dp" android:layout_height="50dp"
              android:id="@+id/color_display"
              app:layout_constraintBottom_toTopOf="@id/divider"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/vibrant"
              android:text="vibrant"
              android:layout_marginTop="10dp"
              android:textSize="20sp"
              app:layout_constraintTop_toTopOf="@+id/divider"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/vibrant_dark"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/vibrant_dark"
              android:text="vibrant dark"
              android:textSize="20sp"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toTopOf="@+id/divider"
              app:layout_constraintStart_toEndOf="@+id/vibrant"
              app:layout_constraintEnd_toStartOf="@+id/vibrant_light"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/vibrant_light"
              android:text="vibrantlight"
              android:textSize="20sp"
              android:layout_marginTop="10dp"
              app:layout_constraintTop_toTopOf="@+id/divider"
              app:layout_constraintStart_toEndOf="@id/vibrant_dark"
              app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/muted"
              app:layout_constraintTop_toBottomOf="@+id/vibrant"
              android:text="muted"
              android:layout_marginTop="20dp"
              android:textSize="20sp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@+id/vibrant_dark"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/muted_dark"
              android:text="muted dark"
              app:layout_constraintTop_toBottomOf="@+id/vibrant"
              android:textSize="20sp"
              android:layout_marginTop="20dp"
              app:layout_constraintStart_toEndOf="@+id/vibrant"
              app:layout_constraintEnd_toStartOf="@+id/vibrant_light"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/muted_light"
              android:text="muted light"
              android:textSize="20sp"
              app:layout_constraintTop_toBottomOf="@+id/vibrant"
              android:layout_marginTop="20dp"
              app:layout_constraintStart_toEndOf="@id/vibrant_dark"
              app:layout_constraintEnd_toEndOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>