<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".PaletteActivity"
        android:background="#ffffff"
        android:padding="20dp">

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#6200EE"
                                               android:background="@color/c_6200EE"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintEnd_toStartOf="@id/button_3700B3"
                                               android:textColor="#ffffff"
                                               android:id="@+id/button_6200EE"/>


    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#3700B3"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintStart_toEndOf="@id/button_6200EE"
                                               app:layout_constraintEnd_toStartOf="@+id/button_03DAC6"
                                               android:background="@color/c_3700B3"
                                               android:textColor="#ffffff"
                                               android:id="@+id/button_3700B3"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#03DAC6"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               app:layout_constraintStart_toEndOf="@id/button_3700B3"
                                               android:background="@color/c_03DAC6"
                                               android:id="@+id/button_03DAC6"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#018786"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:background="@color/c_018786"
                                               app:layout_constraintEnd_toStartOf="@id/button_FFFFFF"
                                               android:id="@+id/button_018786"/>


    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#FFFFFF"
                                               app:layout_constraintStart_toEndOf="@+id/button_018786"
                                               android:background="@color/c_FFFFFF"
                                               app:layout_constraintEnd_toStartOf="@id/button_000000"
                                               android:id="@+id/button_FFFFFF"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#000000"
                                               app:layout_constraintStart_toEndOf="@id/button_FFFFFF"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:background="@color/c_000000"
                                               android:textColor="#ffffff"
                                               android:id="@+id/button_000000"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/button_018786"
                                               android:layout_marginTop="10dp"
                                               android:text="#B00020"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:background="@color/c_B00020"
                                               app:layout_constraintEnd_toStartOf="@id/button_FFFFFF"
                                               android:id="@+id/button_B00020"/>


    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:id="@+id/divider"
          android:background="@color/dark_red"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
    />


    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#6200EE"
                                               android:layout_marginTop="20dp"
                                               android:background="@color/c_6200EE"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintTop_toBottomOf="@+id/divider"
                                               app:layout_constraintEnd_toStartOf="@id/org_button_3700B3"
                                               android:textColor="#ffffff"
                                               android:forceDarkAllowed="false"
                                               android:id="@+id/org_button_6200EE"/>


    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#3700B3"
                                               android:layout_marginTop="20dp"
                                               app:layout_constraintTop_toBottomOf="@+id/divider"
                                               app:layout_constraintStart_toEndOf="@id/org_button_6200EE"
                                               app:layout_constraintEnd_toStartOf="@+id/org_button_03DAC6"
                                               android:background="@color/c_3700B3"
                                               android:textColor="#ffffff"
                                               android:forceDarkAllowed="false"
                                               android:id="@+id/org_button_3700B3"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               android:text="#03DAC6"
                                               android:layout_marginTop="20dp"
                                               app:layout_constraintTop_toBottomOf="@+id/divider"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               app:layout_constraintStart_toEndOf="@id/org_button_3700B3"
                                               android:background="@color/c_03DAC6"
                                               android:forceDarkAllowed="false"
                                               android:id="@+id/org_button_03DAC6"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/org_button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#018786"
                                               android:forceDarkAllowed="false"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:background="@color/c_018786"
                                               app:layout_constraintEnd_toStartOf="@id/org_button_FFFFFF"
                                               android:id="@+id/org_button_018786"/>


    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/org_button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#FFFFFF"
                                               android:forceDarkAllowed="false"
                                               app:layout_constraintStart_toEndOf="@+id/org_button_018786"
                                               android:background="@color/c_FFFFFF"
                                               app:layout_constraintEnd_toStartOf="@id/org_button_000000"
                                               android:id="@+id/org_button_FFFFFF"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/org_button_6200EE"
                                               android:layout_marginTop="10dp"
                                               android:text="#000000"
                                               android:forceDarkAllowed="false"
                                               app:layout_constraintStart_toEndOf="@id/org_button_FFFFFF"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:background="@color/c_000000"
                                               android:textColor="#ffffff"
                                               android:id="@+id/org_button_000000"/>

    <androidx.appcompat.widget.AppCompatButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                               app:layout_constraintTop_toBottomOf="@id/org_button_018786"
                                               android:layout_marginTop="10dp"
                                               android:forceDarkAllowed="false"
                                               android:text="#B00020"
                                               app:layout_constraintStart_toStartOf="parent"
                                               android:background="@color/c_B00020"
                                               app:layout_constraintEnd_toStartOf="@id/org_button_FFFFFF"
                                               android:id="@+id/org_button_B00020"/>


</androidx.constraintlayout.widget.ConstraintLayout>